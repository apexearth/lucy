{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "jsRules": {},
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotemark": [
      "single",
      "always"
    ],
    "semicolon": [
      false,
      "always"
    ],
    "only-arrow-functions": false,
    "no-console": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ]
  },
  "rulesDirectory": []
}